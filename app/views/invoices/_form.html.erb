<%= form_for(@invoice, remote: true) do |f| %>
  <% if @invoice.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@invoice.errors.count, "error") %> prohibited this invoice from being saved:</h2>

      <ul>
      <% @invoice.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "Interpreter" %>
    <%= f.collection_select(:user_id, User.all, :id, :full_name) %>
  </div>

  <div class="field">
    <%= f.label :miles_total %>
    <%= f.text_field :miles_total %>
  </div>

  <div class="field">
    <%= f.label :hours_total %>
    <%= f.text_field :hours_total %>
  </div>

  <div class="field">
    <%= f.label :total_paid %>
    <%= f.text_field :total_paid %>
  </div>

  <div class="field">
    <%= f.label :paid_on %>
    <%= f.date_select :paid_on, include_blank: true %>
  </div>

  <div class="field">
    <%= f.label :start_date %>
    <%= f.date_select :start_date %>
  </div>

  <div class="field">
    <%= f.label :end_date %>
    <%= f.date_select :end_date %>
  </div>

  <div class="actions">
    <%= f.submit class: "btn btn-success", remote: true %>
  </div>
<% end %>

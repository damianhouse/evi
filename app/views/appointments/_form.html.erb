  </div>

  <div class="field">
    <%= f.label :clinic %>
    <%= f.text_field :clinic %>
  </div>

  <div class="field">
    <%= f.label :start_time %>
    <%= f.datetime_select :start_time %>
  </div>

  <div class="field">
    <%= f.label :end_time %>
    <%= f.datetime_select :end_time %>
  </div>

  <div class="field">
    <%= f.label :miles_driven %>
    <%= f.text_field :miles_driven %>
  </div>

  <div class="field">
    <%= f.label :complete %>
    <%= f.check_box :complete %>
  </div>

